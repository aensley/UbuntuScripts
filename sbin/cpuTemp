#!/usr/bin/env bash

# Reports the nth CPU's temperature, where n is the number passed to the script via the command-line.
# Usage: cpuTemp 1

TP=`/usr/bin/sensors -A | grep "Core 0" | sed -e 's/Core 0:[ ]*+//' -e 's/.0[a-zA-Z0-9(=+,.Â°) ]*//' | awk "NR==$1"`

if [ -z $2 ]; then
  echo $TP
fi

exit $TP
